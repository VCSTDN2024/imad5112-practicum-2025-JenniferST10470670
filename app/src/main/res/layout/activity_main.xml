<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/appTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:text="My playlist App  "
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/songT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:hint="enter the song tile "
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textStyle="bold"
        android:text=" " />



    <EditText
    android:id="@+id/artistN"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="21sp"
    android:hint="enter artis name  "
    android:layout_marginTop="8dp"
    android:layout_gravity="center_horizontal"
    android:padding="16dp"
    android:textStyle="bold"
    android:text=" " />




    <EditText
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:hint="provide ratings "
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textStyle="bold"
        android:text=" " />

    <EditText
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:hint="add comments  "
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textStyle="bold"
        android:text=" " />



    <Button
        android:id="@+id/detailBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:text="Add detail"

        />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:text="Next"/>

    <Button
        android:id="@+id/existBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Exist"/>








</LinearLayout>